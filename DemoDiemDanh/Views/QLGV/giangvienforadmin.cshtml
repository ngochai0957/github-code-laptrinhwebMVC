@model IEnumerable<DemoDiemDanh.Model.giangvien>
@{
    ViewBag.Title = "Quản lý giảng viên";
}
<style>
    .select-teacher {
        margin-right: 20px;
        border-radius: 20px;
        padding: 5px;
    }

    .icon {
        color: white;
    }

    .btn-icon {
        border-radius: 8px;
    }
</style>
<main id="main-content" class="container-fluid col-md-9 ms-sm-auto col-lg-10 px-md-2">


    <div class="container-fluid p-3 mt-2 mb-2 bg-light card shadow-sm" style="display: inline-block;">



        <button class="btn-icon" title="Add" style="background-color: orangered;" data-toggle="modal" data-target="#addModal">
            <i style="padding:8px;font-size: 20px;"
               class="icon fa-solid fa-user-plus"></i>
        </button>


    </div>
    <div class="container-fluid pt-4 mt-2 mb-2 bg-light card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                        foreach (var gv in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@gv.email</td>
                                <td>@gv.matkhau</td>

                            </tr>
                            index++;
                        }

                    }


                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Add -->
    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Thêm thông tin giảng viên</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("themgiangvien", "QLGV", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <div class="form-group mb-3">
                                <label for="masv">Mã số giảng viên:</label>
                                <input type="text" class="form-control" placeholder="Mã số giảng viên" name="magv" id="magv" readonly />
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Email:</label>
                                <input type="text" class="form-control" placeholder="Nhập email" name="email" id="email" />
                            </div>
                            <div class="form-group mb-3">
                                <label for="matkhau">Mật khẩu:</label>
                                <input type="text" class="form-control" placeholder="Tạo mật khẩu" name="matkhau" id="matkhau" />
                            </div>
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="close btn btn-secondary" data-dismiss="modal" aria-label="Close" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</main>

