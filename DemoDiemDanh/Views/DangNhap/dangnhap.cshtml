@{
    ViewBag.Title = "Đăng Nhập";
    @Styles.Render("~/Content/bootstrap.min.css")

    Layout = null; // Không sử dụng layout
}

<div class="container-fluid vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="row w-100 shadow-lg rounded overflow-hidden">
        <!-- Left Side - Illustration -->
        <div class="col-md-6 d-flex justify-content-center align-items-center p-0">
            <img src="~/Image/dn.jpg" alt="Illustration" class="img-fluid full-width-image">
        </div>
        <!-- Right Side - Login Form -->
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center p-5 bg-white">
            <h3 class="text-primary mb-4" style="font-weight: 700;">ĐĂNG NHẬP</h3>

            <form action="/DangNhap/dangnhap" method="post" class="w-100">
                <div class="form-group mb-4">
                    <input required name="email" id="email" type="text" class="form-control form-control-lg" placeholder="Tên đăng nhập">
                </div>
                <div class="form-group mb-4">
                    <input required name="mk" id="mk" type="password" class="form-control form-control-lg" placeholder="Mật khẩu">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <label style="color: red;" class="mt-3">@ViewBag.Error</label>
            }
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0;
    }

    .container-fluid {
        background-color: #f0f0f0;
    }

    .row {
        background-color: white;
        border-radius: 10px;
        max-width: 900px;
    }

    .form-control {
        height: 45px;
        font-size: 16px;
        border-radius: 5px;
    }

    .form-control-lg {
        height: 55px;
        font-size: 18px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        height: 45px;
        font-size: 18px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        height: 45px;
        font-size: 18px;
        border-radius: 5px;
        color: white;
        transition: background-color 0.3s;
    }

        .btn-info:hover {
            background-color: #117a8b;
        }

    .img-fluid {
        max-width: 100%;
        height: auto;
        object-fit: cover;
    }

    .full-width-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the image covers the entire container */
    }

    .font-weight-bold {
        font-weight: bold;
    }
</style>